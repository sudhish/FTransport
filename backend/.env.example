# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ftransport
DATABASE_URL_DEV=sqlite:///./ftransport.db

# Redis
REDIS_URL=redis://localhost:6379

# Google Cloud
GOOGLE_SERVICE_ACCOUNT_KEY=/path/to/service-account.json
NOTEBOOKLM_PROJECT_ID=your-notebooklm-project-id
GOOGLE_DRIVE_LANDING_ZONE=https://drive.google.com/drive/folders/YOUR_FOLDER_ID?usp=drive_link

# API Keys (for shared drive access)
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
